<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginVertical="10dp"

        android:text="메뉴 세부정보"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"/>

    <!-- 구분선 -->
    <View
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/edit_menu_img"
                android:background="@drawable/edit_menu_detail"
                android:layout_width="200dp"
                android:layout_height="250dp"

                android:paddingHorizontal="15dp" />

            <Button
                android:id="@+id/edit_menu_img_submit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/pwd_submit_background"
                android:layout_marginTop="10dp"

                android:text="수정"
                android:textSize="30dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp">

        <EditText
            android:id="@+id/edit_menu_examination"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:gravity="center"

            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@drawable/edit_menu_detail"/>

            <Button
                android:id="@+id/edit_menu_ex_submit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/pwd_submit_background"
                android:layout_marginTop="10dp"

                android:text="확인"
                android:textSize="30dp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/edit_menu_name"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:gravity="center"

            android:padding="5dp"

            android:hint="수정된 이름을 입력하세요"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/edit_menu_detail"/>

        <Button
            android:id="@+id/edit_menu_name_submit"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:background="@drawable/man_main_btn_background"
            android:layout_marginLeft="15dp"

            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="확인"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_menu_price"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:gravity="center"

            android:padding="5dp"

            android:hint="수정된 가격을 입력하세요"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/edit_menu_detail"/>

        <Button
            android:id="@+id/edit_menu_price_submit"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:background="@drawable/man_main_btn_background"
            android:layout_marginLeft="15dp"

            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="확인"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/goback"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:background="@drawable/man_main_btn_background"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="30dp"

            android:textSize="30dp"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:text="뒤로 가기"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:background="@drawable/man_main_btn_background"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp"

            android:textSize="30dp"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:text="저장 하기"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:gravity="center"

        android:textSize="30dp"
        android:text="화면 끝" />
</LinearLayout>