<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"

        android:gravity="center"

        android:text="메뉴 세부정보"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:background="@color/purple_500" />

    <!-- 이미지 url 입력 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"

        android:textStyle="bold"
        android:text="이미지 url을 입력해주세요"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edit_menu_img"
            android:layout_width="420dp"
            android:layout_height="100dp"

            android:background="@drawable/edit_menu_detail"
            android:hint="이미지 url 입력하기"
            android:lines="2"

            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingHorizontal="25dp" />

        <Button
            android:id="@+id/goInternet"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"

            android:textStyle="bold"
            android:text="검색하기"
            android:textSize="20dp"
            android:background="@drawable/man_main_btn_background" />


    </LinearLayout>

    <!-- 메뉴 이름 입력 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"

        android:textStyle="bold"
        android:text="메뉴 이름을 입력해주세요"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_menu_name"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:layout_gravity="center"

        android:background="@drawable/edit_menu_detail"
        android:hint="메뉴 이름 입력하기"

        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingHorizontal="25dp" />

    <!-- 메뉴 설명 입력 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"

        android:textStyle="bold"
        android:text="메뉴 설명을 입력해주세요"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_menu_examination"
        android:layout_width="550dp"
        android:layout_height="150dp"
        android:layout_gravity="center"

        android:background="@drawable/edit_menu_detail"
        android:hint="메뉴 설명 입력하기"
        android:lines="3"

        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingHorizontal="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_menu_price"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/edit_menu_detail"
            android:gravity="center"

            android:hint="가격 입력"
            android:padding="5dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_menu_stock"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"

            android:background="@drawable/edit_menu_detail"
            android:gravity="center"

            android:hint="재고 입력"
            android:padding="5dp"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_menu_usage"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/edit_menu_detail"
            android:gravity="center"

            android:hint="판매량 입력"
            android:padding="5dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_menu_id"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"

            android:background="@drawable/edit_menu_detail"
            android:gravity="center"

            android:hint="아이디 입력"
            android:padding="5dp"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>

    <RadioGroup
        android:id="@+id/edit_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/edit_type_burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:text="버거"
            android:textColor="@color/purple_500"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/edit_type_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:text="사이드"
            android:textColor="@color/purple_500"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/edit_type_beverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:text="음료"
            android:textColor="@color/purple_500"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goback"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/man_main_btn_background"
            android:elevation="10dp"

            android:text="뒤로 가기"
            android:textColor="@color/white"

            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/man_main_btn_background"
            android:elevation="10dp"

            android:text="저장 하기"
            android:textColor="@color/white"

            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:gravity="center"

        android:text="화면 끝"
        android:textSize="30dp" />
</LinearLayout>