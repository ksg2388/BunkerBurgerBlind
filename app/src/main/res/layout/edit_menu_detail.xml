<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginVertical="10dp"

        android:text="메뉴 관리하기"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"/>


    <!-- 구분선 -->
    <View
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:background="@drawable/edit_menu_detail"
                android:layout_width="160dp"
                android:layout_height="180dp"

                android:paddingHorizontal="15dp"

                android:src="@drawable/logo" />

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/pwd_submit_background"
                android:layout_marginTop="10dp"

                android:text="수정"
                android:textSize="30dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingRight="10dp">

            <EditText
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:background="@drawable/edit_menu_detail"/>

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/pwd_submit_background"
                android:layout_marginTop="10dp"

                android:text="확인"
                android:textSize="30dp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/edit_menu_name"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:gravity="center"

            android:padding="5dp"

            android:hint="수정된 이름을 입력하세요"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/edit_menu_detail"/>

        <Button
            android:id="@+id/edit_menu_name_submit"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="@drawable/man_main_btn_background"
            android:layout_marginLeft="15dp"

            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="확인"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_menu_price"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:gravity="center"

            android:padding="5dp"

            android:hint="수정된 가격을 입력하세요"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/edit_menu_detail"/>

        <Button
            android:id="@+id/edit_menu_price_submit"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="@drawable/man_main_btn_background"
            android:layout_marginLeft="15dp"

            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="확인"/>

    </LinearLayout>



    <Button
        android:id="@+id/goback"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:background="@drawable/man_main_btn_background"
        android:elevation="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"

        android:textSize="20dp"
        android:textStyle="bold"

        android:textColor="@color/white"
        android:text="뒤로 가기"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="10dp"

        android:textSize="30dp"
        android:text="화면 끝" />
</LinearLayout>